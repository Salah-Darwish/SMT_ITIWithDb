@model EmployeeVMcs
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<form asp-action="Add" asp-controller="Validation" method="post">
    <div class="mb-2">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span class="text-danger" asp-validation-for="Age"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="Img"></label>
        <input class="form-control" asp-for="Img" />
        <span class="text-danger" asp-validation-for="Img"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-2">
        <label class="form-label" asp-for="Office_Id"></label>
        <select class="form-select" asp-for="Office_Id" asp-items="@Model.Offices"></select>
        <span class="text-danger" asp-validation-for="Office_Id"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="mb-2">
        <label class="form-label" asp-for="ConfirmPassword"></label>
        <input class="form-control" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="mb-2 text-center">
        <input type="submit" value="Add" class="btn btn-warning" />
    </div>
</form>
@section Scripts{
    <script src="/lib/jquery//dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

